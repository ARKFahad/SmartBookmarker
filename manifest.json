{
  "manifest_version": 3,
  "name": "Smart Bookmarker",
  "version": "1.0.0",
  "description": "A smart bookmarking extension with tagging and organization features",
  "permissions": [
    "bookmarks",
    "storage",
    "activeTab",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Smart Bookmarker"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icons/icon.svg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
} 